@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Id)</td>
                <td>@Html.DisplayNameFor(D=>D.FirstName)</td>
                <td>@Html.DisplayNameFor(D=>D.Email)</td>
                <td>@Html.DisplayNameFor(D=>D.Roles)</td>
@*                <td>Details</td>
*@                <td class="text-success">Update</td>
                <td class="text-danger">Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@Html.DisplayFor(E=>user.Email)</td>
                    <td>
                        @string.Join(",",user.Roles.ToList())
                    </td>
                  
                    @*<td>
                        <input class="btn btn-outline-warning" value="Details" onclick="details(@user.Id)"
                               data-bs-toggle="modal" data-bs-target="#Detailes" />
                    </td>*@
                    <td><a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id">Update</a></td>
                    <td> <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h2 class="">There Is No Employee</h2>
    </div>
}

