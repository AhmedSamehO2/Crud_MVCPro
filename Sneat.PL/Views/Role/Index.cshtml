@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<partial name="RoleForm" model="new RoleViewModel()" />
@if (Model.Count() > 0)
{
<table class="table table-striped table-hover mt-3" >
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(D=>D.Id)</td>
            <td>@Html.DisplayNameFor(D=>D.Name)</td>
            <td class="text-success">Update</td>
            <td class="text-danger">Delete</td>
            <td class="text-danger">Permission</td>

        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
 
                <td>@role.Id</td>
                <td>@role.Name</td>>
                <td><a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@role.Id">Update</a></td>
                <td> <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
               <td> <a class="btn btn-outline-info" asp-action="ManageRoles" asp-route-id="@role.Id">Permission</a></td>

            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h2 class="">There Is No Employee</h2>
    </div>
}