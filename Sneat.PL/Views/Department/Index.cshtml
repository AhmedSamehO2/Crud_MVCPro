@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(TempData is not null)
{
    <div id="Mesdiv" class="alert alert-success">
        @TempData["Message"]
    </div>
}

<a class="btn btn-outline-success" asp-action="Create">Create New Department</a>
@if (Model.Count() > 0)
{
    <h1>AllDEpartment</h1>
    

    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
                <td>@Html.DisplayNameFor(D=>D.DateOfCreation)</td>
                <td>Details</td>
                <td class="text-success">Update</td>
                <td class="text-danger">Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        <a class="btn btn-warning">Detailes</a>
                    </td>
                    <td><a class="btn btn-outline-success" asp-action="Update" asp-route-id="@department.Id">Update</a></td>
                    <td> <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@department.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h2 class="">There Is No Department</h2>
    </div>
}
@section dataSection{
    <script>
        $("#Mesdiv").delay(1000).fadeOut(500)
    </script>
}